<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadMenu">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/holo_red_light"
            android:font="@font/dancing"
            android:text="Introduzca el precio del ordenador que desee"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="308dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:entries="@array/precio"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/holo_red_light"
            android:text="Uso del ordenador"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="308dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:entries="@array/uso"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/button"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="90dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="GENERAR ORDENADOR"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/iCasa"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginEnd="344dp"
        android:background="#FFFFFF"
        android:foreground="@drawable/casitatf"
        android:src="@drawable/casitatf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </ImageButton>

    <ImageButton
        android:id="@+id/iUsuario"
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:background="@drawable/usuariotfg"
        android:scaleType="centerInside"
        android:src="@drawable/usuariotfg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

    </ImageButton>

    <ImageButton
        android:id="@+id/iOrdenador"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:background="@drawable/ordenadortfg"
        android:scaleType="centerInside"
        android:src="@drawable/ordenadortfg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iUsuario"
        app:layout_constraintStart_toEndOf="@+id/iCasa"
        tools:ignore="MissingConstraints">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>